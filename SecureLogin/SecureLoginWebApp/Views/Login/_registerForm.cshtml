@model SecureLoginWebApp.Models.LoginModel

<!-- Special version of Bootstrap that only affects content wrapped in .bootstrap-iso -->
<link rel="stylesheet" href="https://formden.com/static/cdn/bootstrap-iso.css" />
<!--Font Awesome (added because you use icons in your prepend/append)-->
<link rel="stylesheet" href="https://formden.com/static/cdn/font-awesome/4.4.0/css/font-awesome.min.css" />


<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal">&times;</button>
    <h4 class="modal-title">New User Registration</h4>
</div>


<div class="modal-body">
    <div class="bootstrap-iso">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-6 col-sm-6 col-xs-12">
                    @using (Html.BeginForm("RegisterNewUser", "Login", FormMethod.Post, new { @class = "form", @role = "form" }))
                    {
                        @Html.AntiForgeryToken()          // this prevents CSRF attack
                        @Html.ValidationSummary(true)
                        <div class="form-group row">
                            <label class="control-label requiredField" for="txtUsername">
                                Username
                                <span class="asteriskField">
                                    *
                                </span>
                            </label>
                            <div class="input-group row">
                                <div class="input-group-addon">
                                    <i class="fa fa-user">
                                    </i>
                                </div>
                                @Html.TextBoxFor(x => x.login_username, new { @class = "form-control", @placeholder = "Enter Username", @type = "text" })
                                @*<input class="form-control" id="txtUsername" name="txtUsername" placeholder="Enter Username" type="text" />*@
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="control-label requiredField" for="email">
                                Email Id
                                <span class="asteriskField">
                                    *
                                </span>
                            </label>
                            <div class="input-group row">
                                <div class="input-group-addon">
                                    <i class="fa fa-envelope">
                                    </i>
                                </div>
                                @Html.TextBoxFor(x => x.emailID, new { @class = "form-control", @placeholder = "Enter EmailId", @type = "email" })
                                @*<input class="form-control" id="email" name="email" type="text" />*@
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="control-label requiredField" for="date">
                                Date of Birth
                                <span class="asteriskField">
                                    *
                                </span>
                            </label>
                            <div class="input-group row">
                                <div class="input-group-addon">
                                    <i class="fa fa-calendar">
                                    </i>
                                </div>
                                @Html.TextBoxFor(x => x.DOB, new { @class = "form-control", @placeholder = "MM/DD/YYYY", @type = "text" })
                                @*<input class="form-control" id="date" name="date" placeholder="MM/DD/YYYY" type="text" />*@
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="control-label requiredField" for="txtPwd">
                                Password
                                <span class="asteriskField">
                                    *
                                </span>
                            </label>
                            <div class="input-group row">
                                <div class="input-group-addon">
                                    <i class="fa fa-lock">
                                    </i>
                                </div>
                               @Html.TextBoxFor(x => x.login_password, new { @class = "form-control", @placeholder = "Enter Password", @type = "password" })
                                @*<input class="form-control" id="txtPwd" name="txtPwd" placeholder="Enter Password" type="password" />*@
                            </div>
                        </div>
                        <div class="form-group">
                            <div>
                                <button type="submit" id="btnRegister" class="btn btn-primary btn-default btn-block"><span class="glyphicon glyphicon-edit"></span>Complete Registration</button>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>   
</div>

